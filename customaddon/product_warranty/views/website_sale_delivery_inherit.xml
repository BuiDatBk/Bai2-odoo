<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="cart_discount" name="Discount Code" inherit_id="website_sale.total">
            <xpath expr="//tr[@id='order_total_untaxed']" position="after">
                <tr id="dc">
                    <td class="text-right border-0">Discount:</td>
                    <td class="text-xl-right border-0">
                        <span t-field="website_sale_order.discount_total"/>
                    </td>
                </tr>
            </xpath>
        </template>


        <template id="warranty_code" name="Warranty Code" inherit_id="website_sale.cart_lines">
            <xpath expr="//table[@id='cart_products']/thead/tr/th[@class='text-center td-qty']" position="after">
                <th class="text-center product_warranty">Warranty Code</th>
            </xpath>
            <xpath expr="//tbody/t/tr/td[@class='text-center td-qty']" position="after">

                <td class='text-center product_warranty'>
                    <div t-esc="line.product_id.product_warranty"/>
                </td>

            </xpath>
        </template>

    </data>
</odoo>